<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:keepScreenOn="true">

    <com.ms.hht.lib.fotoapparat.view.CameraView
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <androidx.camera.view.PreviewView
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.ms.hht.javautil.GraphicOverlay
        android:id="@+id/graphic_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <View
        android:id="@+id/view1"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:alpha="0.6"
        android:background="@color/red" />

    <View
        android:id="@+id/view2"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:alpha="0.6"
        android:background="@color/red" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_toStartOf="@+id/view2"
        android:layout_toEndOf="@+id/view1"
        android:alpha="0.6"
        android:background="@color/red" />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/view2"
        android:layout_toEndOf="@+id/view1"
        android:alpha="0.6"
        android:background="@color/red" />

    <ImageView
        android:id="@+id/camera_back"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/_5sdp"
        android:contentDescription="@string/back_btn"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/back_img" />

    <TextView
        android:id="@+id/top_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:alpha="0.6"
        android:background="@color/white"
        android:fontFamily="@font/lato_regular"
        android:padding="@dimen/_5sdp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/front"
        android:textColor="@color/baseColor"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/pose_image"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_below="@+id/view3"
        android:layout_marginStart="@dimen/_minus10sdp"
        android:layout_toEndOf="@+id/view1"
        android:contentDescription="@string/poseimage"
        android:src="@drawable/maletightfitfront" />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view4"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/base_yellow"
        android:textSize="@dimen/_90sdp" />

    <View
        android:id="@+id/line_view"
        android:layout_width="@dimen/_2sdp"
        android:layout_height="match_parent"
        android:layout_below="@+id/view3"
        android:layout_centerHorizontal="true"
        android:background="@color/base_yellow" />
</RelativeLayout>
