<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_60sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/white_background_low_border"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginStart="@dimen/_20sdp"
    android:layout_marginEnd="@dimen/_20sdp"
    android:id="@+id/measurementHistoryCard">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_margin="@dimen/_2sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <ImageView
        android:id="@+id/tapeImg"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/tape"
        android:layout_marginStart="@dimen/_10sdp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tapeImg"
        android:layout_centerVertical="true"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:layout_toStartOf="@+id/eyeImg">

        <TextView
            android:id="@+id/nameTF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text=""
            android:textColor="@color/App_color_dark_grey"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/dateTF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameTF"
            android:fontFamily="@font/lato_regular"
            android:text=""
            android:textColor="@color/App_color_light_grey"
            android:textSize="@dimen/_10sdp" />
    </RelativeLayout>


            <ImageView
                android:id="@+id/eyeImg"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@color/App_color_theme_blue"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/white_eye" />
</RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>