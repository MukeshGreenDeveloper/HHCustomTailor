<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.login.ForgotPassAct">

    <ImageView
        android:id="@+id/blueLogo"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:padding="@dimen/_3sdp"
        android:src="@drawable/hht_blue_logo" />


    <ImageView
        android:id="@+id/logoHHt"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_toEndOf="@+id/blueLogo"
        android:src="@drawable/hht_grey_logo" />

    <TextView
        android:id="@+id/passTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoHHt"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:fontFamily="@font/lato_bold"
        android:text="@string/forgotPass"
        android:textColor="@color/App_color_dark_grey"
        android:textSize="@dimen/_25sdp" />

    <TextView
        android:id="@+id/chanTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passTxt"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:fontFamily="@font/lato_regular"
        android:text="@string/change_Pass_text"
        android:textColor="@color/App_color_light_grey"
        android:textSize="@dimen/_12sdp" />

    <EditText
        android:id="@+id/emailEdiTxt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_below="@+id/chanTxt"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        android:background="@drawable/white_background"
        android:elevation="@dimen/_2sdp"
        android:fontFamily="@font/lato_regular"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:textColor="@color/App_color_light_grey"
        android:textSize="@dimen/_12sdp" />

    <ImageView
        android:id="@+id/backActi"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/_1sdp"
        android:src="@drawable/left" />

    <Button
        android:id="@+id/proceBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_toEndOf="@+id/backActi"
        android:background="@drawable/black_backgroud_for_button"
        android:fontFamily="@font/lato_regular"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp" />


</RelativeLayout>